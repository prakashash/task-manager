<html>
    <head>
        <title>Reset password</title>
        <script src="/js/jquery-3.6.0.js"></script>
        <script src = "/js/reset.js"></script>
    </head>
    <body>
        <fieldset>
            <form id="resetForm">
                <p id="errMsg" style="color: red;"></p>
                <label>Email</label>
                <input type="text" id="emailId", value="{{admin.email}}" disabled><br>
                <label>Old Password</label>
                <input type="password" id="oldPswd"><br>
                <label>New Password</label>
                <input type="password" id="newPswd"><br>
                <label>Confirm Password</label>
                <input type="password" id="confirmPswd"><br>       
                <input type="submit" value="Submit"><br>
            </form>
        </fieldset>
    </body>
</html>